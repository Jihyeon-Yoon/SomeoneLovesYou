<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who Grow the Flower"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#8fc552"
        />

    <LinearLayout
        android:id="@+id/linearbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_sort_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간순"
            android:textColor="#fcfcfc"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/triangle"
            android:backgroundTint="#3c3f41"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_sort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름순"
            android:textColor="#fcfcfc"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/triangle"
            android:backgroundTint="#3c3f41"
            android:layout_weight="1"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/editSearch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="검색어를 입력하세요."/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>